<%= render "layouts/navbar.html.erb"%>
<p id="notice"><%= notice %></p>

<div>
  <h1>Appointments</h1>
  <% if not isConsuUser? %>
    <%= link_to 'New Appointment', new_professional_appointment_path %>
    <%= link_to 'Export Schedule', professional_export_one_path %>
  <% end %>
  <br>

  <table>
    <thead>
      <tr>
        <th>| Date |</th>
        <th></th>
        <th>| Full Name |</th>
        <th>| Phone |</th>
        <th>| Note |</th>
        <th>Options</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td><%= formadate(appointment.date) %></td>
          <td></td>
          <td><%= full_name(appointment.name, appointment.surname) %></td>
          <td><%= appointment.phone %></td>
          <td><%= appointment.note %></td>

          <td>
          <%= link_to 'Show', [@professional,appointment] %>
          <% if not isConsuUser? %>
          <%= link_to 'Edit', edit_professional_appointment_path(@professional,appointment) %>
          <%= link_to 'Destroy', [@professional,appointment], method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Back', professionals_path %>
</div>
